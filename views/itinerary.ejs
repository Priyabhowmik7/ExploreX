        <div class="forecasts">
          <% for (let w=0; w < weather.forecast.length; w++) { %>
          <div class="forecast-card">
            <p>Day <%= w + 1 %></p>
            <p>High: <%= weather.forecast[w].high %>Â°C</p>
            <p>Low: <%= weather.forecast[w].low %>Â°C</p>
