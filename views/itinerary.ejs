        <button style="margin-left: 10px;" class="save" onclick="regenerate()">Regenerate</button>
        <% } else { %>
        <button class="save" onclick="goBack()">My Account</button>
        <script>
          function goBack() {
            window.location.href = "/me";
          }
        </script>
        <% } %>
      </div>
    </div>
